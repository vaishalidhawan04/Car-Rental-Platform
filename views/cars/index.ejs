<%- include("../layouts/boilerplate.ejs") %>


    <div class="main-page-img-v">
        <div>
        </div>
        <div class="div-rent-v">
            <div class="div-rent-child-v">
                <h1 class="h1-rent-v">Rent a car now</h1>
            </div>
            <div class="div-rent-child-v">
                <% if(city) { %>
                    <h2 id="main-sub-heading-v">Book your drive in <%= city %>
                    </h2>
                <% } else { %>
                    <h2 id="main-sub-heading-v">Book your drive!</h2>
                <% } %>
            </div>
        </div>

        <section class="getCar">
            <div class="dropdown ms-5">
                <a class="btn places btn-light dropdown-toggle bg-white" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false" id="selectedLocationBtn">Select Location in <%= city %></a>
                <ul class="dropdown-menu">
                    <% for(let city of locations)  {  %>
                        <li><a class="dropdown-item" href="#" onclick="selectLocation('<%= city %>')"><%= city %></a></li>
                     <%  } %>   
                </ul>
            </div>
            <div class="midLine"></div>
            <input type="text" class="address" name="daterange"/>
            <button class="address" onclick="scrollCars()">GET CAR</button>
        </section>

        <script>

            function selectLocation(city) {
                var selectedLocationBtn = document.getElementById("selectedLocationBtn");
                selectedLocationBtn.innerText = city;
            }

            function scrollCars() {
                var ele = document.getElementById("popular-cars-section");
                if(ele){
                    ele.scrollIntoView({ behavior: "smooth", block: "start" });
                }
            }
        </script>
        

    </div>

    <div class="popular-cars-div-v" id="popular-cars-section">
        <h1 class="popular-cars-h1-v">Popular Cars</h1>
    </div>

    <div class="row">
        <% for(let item of cars){ %>
            <div class="product-card">
                <div class="card">
                    <img class="card-img-top" src="<%=item.img%>" alt="Car Image">
                    <div class="cardBody">
                        <h5 class="card-title"><%= item.name %></h5>
                        <p class="card-text" style="text-align: center;"><%= item.desc %></p>
                        <p class="card-price">â‚¹<%= item.price %>/hr</p>  
                        <div class="botn-div"><a href="/cars/<%=item._id%>" class="btn botn btn-primary">View Car</a></div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

<!-- Why choose Drive Dynasty -->
<div class="mt-5">
    <div class="why-dynasty-v">
        <h1>Why choose DriveDynasty &#x3f;</h1>
    </div>
    <div class="reasons-v">
        <div class="reasons-children-v mx-5">
            <div class="reasons-img-v">
                <i class="fa-solid fa-car fa-2xl mt-4"></i>
            </div>
            
            <p class="mt-3">Accessibe</p>
        </div>
        <div class="reasons-children-v mx-5">
            <div class="reasons-img-v">
                <i class="fa-solid fa-calendar-days fa-2xl mt-4"></i>
            </div>
            
            <p class="mt-3">Convenient</p>

        </div>
    </div>
</div>

<div class="service-places-parent-v">
    <div class="service-places-child-v">
        <h4 style="font-weight:700;">CAR RENTAL PLACES IN INDIA</h4>
    </div>
    <div class="service-places-child-v">
        <%- include("../partials/footer.ejs") %>
    </div>
    
</div>


