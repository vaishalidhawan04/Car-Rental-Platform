                        <h2 class="card-title"><%= item.name %></h2>
                        <h4 class="card-text"><%= item.desc %></h4>
                        <h3 class="card-title">â‚¹<%= item.price %>/hr</h3>
                        <a href="/cars/<%=item._id%>" class="btn btnn btn-primary">View Car</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

